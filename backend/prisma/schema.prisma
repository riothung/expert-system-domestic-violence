generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default (autoincrement())
  email String?
  password String?
  isAdmin Boolean @default(false)
}

model JenisKdrt {
  id Int @id @default(autoincrement())
  nama String 
  ciriKdrt CiriKdrt []
}

model CiriKdrt {
  id Int @id @default(autoincrement())
  nama String
  id_jeniskdrt Int 
  id_jk JenisKdrt @relation(fields: [id_jeniskdrt], references: [id])
}

